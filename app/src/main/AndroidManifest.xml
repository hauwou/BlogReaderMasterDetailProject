<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agctonline.blogreadermasterdetailproject" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.agctonline.blogreadermasterdetailproject.MainListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.agctonline.blogreadermasterdetailproject.BlogWebViewActivity"
            android:label="@string/title_activity_blog_web_view"
            android:parentActivityName="com.agctonline.blogreadermasterdetailproject.MainListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.agctonline.blogreadermasterdetailproject.MainListActivity" />
        </activity>
    </application>

</manifest>
